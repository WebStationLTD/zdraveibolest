# NPM configuration for Next.js with SWC

# Disable unnecessary outputs during build
fund=false
audit=false

# Enable progress display
progress=true

# Automatically install peer dependencies
auto-install-peers=true

# Sharp image optimization binary settings
sharp_binary_host=https://github.com/lovell/sharp-libvips/releases/download/
sharp_libvips_binary_host=https://github.com/lovell/sharp-libvips/releases/download/

# Use official npm registry
registry=https://registry.npmjs.org/
